<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/line_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hstryDscrpTtl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanumsquare_aac"
            android:text="사용내역 알림내용 제목"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hstryDscrp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nanumsquare_aab"
            android:hint="사용내역 알림내용"
            android:text=""

            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="230dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_baseline_map_24"
        />

</LinearLayout>