<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sfzImg"
            android:background="@drawable/ic_baseline_home_work_24"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="top|left"
            android:layout_marginStart="20dp"
            android:padding="0dp"
            app:srcCompat="@drawable/border_color" />

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/sfzUsrEntPl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanumsquare_aac"
                android:text="사용자가 입력한 장소 이름"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sfzUsrSrchPl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/nanumsquare_aab"
                android:text=""
                android:hint="사용자가 검색한 장소"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sfzImgTwinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@id/sfzUsrSrchPl"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/sfzEditBtn"
                android:background="@drawable/ic_baseline_create_24"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="0dp"
                app:srcCompat="@drawable/border_color" />

            <ImageButton
                android:id="@+id/sfzDeleteBtn"
                android:background="@drawable/ic_baseline_clear_24"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="0dp"
                app:srcCompat="@drawable/border_color"

                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#939393" />


</LinearLayout>