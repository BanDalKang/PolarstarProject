<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Myinfo_Duser_nActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_aac"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ProflN"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                app:civ_border_overlay="true"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFF"
                android:src="@drawable/profileimage"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="회원 정보"
                android:textColor="#454545"
                android:fontFamily="@font/nanumsquare_aac"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:text="기본 정보"
                android:textColor="#454545"
                android:fontFamily="@font/nanumsquare_aac"
                android:textSize="14dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="이름"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/mProflNameN"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ems="10"
                    android:hint="이름 입력"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="전화번호"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/mProflPhoneNumN"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="전화번호 입력"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:text=""
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="계정 관리"
                android:textColor="#454545"
                android:fontFamily="@font/nanumsquare_aac"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mProflEmailN"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:hint="(ex. OOO@mail.com)"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/mProflBtEmailCkN"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="#240070"
                    android:textColor="@color/white"
                    android:text="이메일 인증"
                    android:fontFamily="@font/nanumsquare_aac"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="비밀번호 재설정"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/mProflBtPWChageN"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="#240070"
                    android:textColor="@color/white"
                    android:text="비밀번호 재설정"
                    android:fontFamily="@font/nanumsquare_aac"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"
                android:text="추가 정보"
                android:textColor="#454545"
                android:fontFamily="@font/nanumsquare_aac"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="도로명 주소"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14dp"  />

                <EditText
                    android:id="@+id/mProflAddressN"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ems="10"
                    android:hint="도로명 주소 입력"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/mProflFdAddN"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#240070"
                    android:textColor="@color/white"
                    android:text="검색"
                    android:fontFamily="@font/nanumsquare_aac"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="상세주소"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14dp"  />

                <EditText
                    android:id="@+id/mProflDetailAddressN"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ems="10"
                    android:hint="상세주소 입력"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="생년월일"
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/mProflBirthN"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:padding="11dp"
                    android:singleLine="true"
                    android:hint="(ex. 19001231) "
                    android:inputType="date"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mProflGenderN"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:text="성별 "
                    android:textColor="#454545"
                    android:fontFamily="@font/nanumsquare_aab"
                    android:textSize="14dp" />

                <RadioGroup
                    android:id="@+id/mProflBtGenderN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/mProflBtGenderMN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="남" />

                    <RadioButton
                        android:id="@+id/mProflBtGenderFN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="여" />

                </RadioGroup>
            </LinearLayout>


            <Button
                android:id="@+id/mProflBtEditN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#240070"
                android:textColor="@color/white"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/nanumsquare_aac"
                android:text="프로필 수정"
                android:textSize="14dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
